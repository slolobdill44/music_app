<!DOCTYPE html>

<html>
  <head>
    <meta charset="utf-8">
  </head>

  <body>
    <% action_url = ( action == :login ? sessions_url : users_url ) %>

    <form action="<%= action_url %>" method="post">
      <label for="email">Email</label>
      <br />
      <input type="text" id="email" name="user[email]"></input>
      <br />
      <br />
      <label for="password">Password</abel>
        <br />
        <input type="text" id="password" name="user[password]"></input>
        <br />
        <br />
        <input type="submit" value="<%= action == :login ? "Login" : "Sign up" %>">
      </form>
  </body>

</html>
