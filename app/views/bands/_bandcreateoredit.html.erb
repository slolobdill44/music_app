<!DOCTYPE html>

<html>
  <head>
    <meta charset="utf-8">
  </head>

  <body>
    <% action_url = ( action == :create ? bands_url : band_url(@band) ) %>
    <% method = (@band.persisted? ? :patch : :post) %>

    <form action="<%= action_url %>" method="post">
      <input type="hidden" name="_method" value="<%= method %>">

      <label for="band_name">Name</label>
      <br />
      <input type="text" id="band_name" name="band[name]"></input>
      <br />
      <br />
      <input type="submit" value="<%= action == :create ? "Create new band!" : "Rename the band!" %>">
    </form>
  </body>

</html>
